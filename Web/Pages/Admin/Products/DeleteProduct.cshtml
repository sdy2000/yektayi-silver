@page "{id}"
@using Core.Convertors
@model Web.Pages.Admin.Products.DeleteProductModel
@{
    ViewData["Title"] = "حذف محصول";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">حذف محصول</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                اطلاعات محصول
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <!-- Nav tabs -->
                <dl class="dl-horizontal">

                    <dt>تصریر محصول :</dt>
                    <dd>
                        <img src="/ProductImage/image/@Model.DeleteProduct.MainProductImage" class="thumbnail" id="imgCourse"
                             alt="Course Imag" title="Course Image" style="max-width:100%;" />
                    </dd>
                    <br />

                    <dt>عنوان محصول :</dt>
                    <dd>@Model.DeleteProduct.ProductTitle</dd>
                    <br />

                    <dt>توضیحات مختصر محصول :</dt>
                    <dd>@Html.Raw(Model.DeleteProduct.ProductShortDescription)</dd>
                    <br />

                    <dt>توضیحات محصول :</dt>
                    <dd>@Html.Raw(Model.DeleteProduct.ProductDescription)</dd>
                    <br />

                    <dt>تاریخ ایجاد :</dt>
                    <dd>@Model.DeleteProduct.CreateDate.ToShamsi()</dd>
                    <br />

                    <dt>فروشنده :</dt>
                    <dd>@Model.DeleteProduct.Seller</dd>
                    <br />

                    <dt>وضعیت محصول:</dt>
                    <dd>@Model.DeleteProduct.Status</dd>
                    <br />

                    <dt>تعداد :</dt>
                    <dd>@Model.DeleteProduct.ProductStock</dd>
                    <br />

                    <dt>قیمت محصول :</dt>
                    <dd>@Model.DeleteProduct.ProductPrice</dd>
                    <br />

                    <dt>وزن محصول :</dt>
                    <dd>@Model.DeleteProduct.Weight</dd>
                    <br />


                    
                    <br />
                    <dt>
                        <a href="/Admin/Products" class="btn btn-info">انصراف</a>
                    </dt>
                    <dd>
                        <form method="post">
                            <input type="hidden" asp-for="DeleteProduct.ProductId" />

                            <input type="submit" class="btn btn-danger" value="حذف محصول" />
                        </form>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>